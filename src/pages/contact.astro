---
import Layout from '../components/Layout.astro';
import { siteConfig } from '../config';
---

<Layout title="Contact Us" description={`Get in touch with ${siteConfig.companyName} for all your managed IT service needs`}>
  <!-- Page Header -->
  <section class="bg-brand-primary text-white py-10 sm:py-12 md:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-3 sm:mb-4">Contact Us</h1>
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl">
        We're here to help with all your IT needs
      </p>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-12 sm:py-16 md:py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-8 sm:mb-10 md:mb-12">
          <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-3 sm:mb-4">Get in Touch</h2>
          <p class="text-base sm:text-lg md:text-xl text-gray-700 max-w-2xl mx-auto">
            Have questions about our services? We'd love to hear from you.
          </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-10 sm:mb-12">
          <!-- Email -->
          <div class="bg-white p-5 sm:p-6 md:p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center">
            <div class="text-brand-primary text-4xl mb-3 sm:mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 sm:h-12 sm:w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-base sm:text-lg md:text-xl font-semibold mb-2">Email</h3>
            <a href={`mailto:${siteConfig.contact.email}`} class="text-sm sm:text-base text-brand-primary hover:text-brand-primary-dark break-all">
              {siteConfig.contact.email}
            </a>
          </div>

          <!-- Phone -->
          <div class="bg-white p-5 sm:p-6 md:p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center">
            <div class="text-brand-primary text-4xl mb-3 sm:mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 sm:h-12 sm:w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <h3 class="text-base sm:text-lg md:text-xl font-semibold mb-2">Phone</h3>
            <a href={`tel:${siteConfig.contact.phone.replace(/[^0-9]/g, '')}`} class="text-sm sm:text-base text-brand-primary hover:text-brand-primary-dark">
              {siteConfig.contact.phone}
            </a>
          </div>

          <!-- Address -->
          <div class="bg-white p-5 sm:p-6 md:p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center sm:col-span-2 lg:col-span-1">
            <div class="text-brand-primary text-4xl mb-3 sm:mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 sm:h-12 sm:w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-base sm:text-lg md:text-xl font-semibold mb-2">Address</h3>
            <p class="text-sm sm:text-base text-gray-700">
              {siteConfig.contact.address}
            </p>
          </div>
        </div>

        <!-- Business Hours -->
        <div class="bg-gray-50 p-6 sm:p-8 md:p-10 rounded-lg">
          <h3 class="text-xl sm:text-2xl md:text-3xl font-bold mb-4 sm:mb-6 text-center">Business Hours</h3>
          <div class="max-w-md mx-auto space-y-2 sm:space-y-3">
            <div class="flex justify-between text-sm sm:text-base">
              <span class="font-semibold">Monday - Friday:</span>
              <span class="text-gray-700">8:00 AM - 6:00 PM</span>
            </div>
            <div class="flex justify-between text-sm sm:text-base">
              <span class="font-semibold">Saturday:</span>
              <span class="text-gray-700">9:00 AM - 2:00 PM</span>
            </div>
            <div class="flex justify-between text-sm sm:text-base">
              <span class="font-semibold">Sunday:</span>
              <span class="text-gray-700">Closed</span>
            </div>
            <div class="mt-4 sm:mt-6 pt-4 sm:pt-6 border-t border-gray-300 text-center">
              <p class="text-xs sm:text-sm text-gray-600">
                <strong>Emergency Support:</strong> Available 24/7 for existing clients
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Links (if configured) -->
  {(siteConfig.social.linkedin || siteConfig.social.twitter) && (
    <section class="py-10 sm:py-12 md:py-16 bg-gray-50">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h3 class="text-xl sm:text-2xl md:text-3xl font-bold mb-4 sm:mb-6">Connect With Us</h3>
          <div class="flex justify-center gap-4 sm:gap-6 md:gap-8">
            {siteConfig.social.linkedin && (
              <a 
                href={siteConfig.social.linkedin} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-brand-primary hover:text-brand-primary-dark transition"
                aria-label="LinkedIn"
              >
                <svg class="h-8 w-8 sm:h-10 sm:w-10 md:h-12 md:w-12" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            )}
            {siteConfig.social.twitter && (
              <a 
                href={siteConfig.social.twitter} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-brand-primary hover:text-brand-primary-dark transition"
                aria-label="Twitter"
              >
                <svg class="h-8 w-8 sm:h-10 sm:w-10 md:h-12 md:w-12" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Call-to-Action -->
  <section class="py-12 sm:py-16 md:py-20 bg-brand-primary text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4 md:mb-6">
        Ready to Get Started?
      </h2>
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl mb-6 sm:mb-8 max-w-2xl mx-auto">
        Reach out today and let's discuss how we can help your business succeed
      </p>
      <a 
        href={`mailto:${siteConfig.contact.email}`}
        class="inline-block bg-white text-brand-primary px-6 py-2.5 sm:px-8 sm:py-3 md:px-10 md:py-4 rounded-lg text-sm sm:text-base md:text-lg font-semibold hover:bg-gray-100 transition shadow-lg"
      >
        Send Us an Email
      </a>
    </div>
  </section>
</Layout>
