---
import Layout from '../components/Layout.astro';
import { siteConfig } from '../config';

const base = import.meta.env.BASE_URL;
---

<Layout title="Home" description={siteConfig.description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-12 sm:py-16 md:py-20 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-3 sm:mb-4 md:mb-6">
        {siteConfig.companyName}
      </h1>
      <p class="text-lg sm:text-xl md:text-2xl lg:text-3xl mb-6 sm:mb-8 max-w-3xl mx-auto">
        {siteConfig.tagline}
      </p>
      <a 
        href={`${base}/contact/`}
        class="inline-block bg-white text-blue-600 px-6 py-2.5 sm:px-8 sm:py-3 md:px-10 md:py-4 rounded-lg text-sm sm:text-base md:text-lg font-semibold hover:bg-gray-100 transition shadow-lg"
      >
        Get Started
      </a>
    </div>
  </section>

  <!-- Services Overview Section -->
  <section class="py-12 sm:py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-center mb-8 sm:mb-10 md:mb-12">Our Services</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        <div class="bg-white p-5 sm:p-6 md:p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-lg sm:text-xl md:text-2xl font-semibold mb-2 sm:mb-3">Infrastructure Management</h3>
          <p class="text-sm sm:text-base text-gray-600 leading-relaxed">
            Comprehensive management of your IT infrastructure, ensuring optimal performance and reliability.
          </p>
        </div>
        <div class="bg-white p-5 sm:p-6 md:p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-lg sm:text-xl md:text-2xl font-semibold mb-2 sm:mb-3">24/7 Support</h3>
          <p class="text-sm sm:text-base text-gray-600 leading-relaxed">
            Round-the-clock technical support to keep your business running smoothly at all times.
          </p>
        </div>
        <div class="bg-white p-5 sm:p-6 md:p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow sm:col-span-2 lg:col-span-1">
          <h3 class="text-lg sm:text-xl md:text-2xl font-semibold mb-2 sm:mb-3">Cloud Solutions</h3>
          <p class="text-sm sm:text-base text-gray-600 leading-relaxed">
            Expert cloud migration and management services to modernize your business operations.
          </p>
        </div>
      </div>
      <div class="text-center mt-6 sm:mt-8 md:mt-10">
        <a 
          href={`${base}/services/`}
          class="inline-block text-sm sm:text-base md:text-lg text-blue-600 font-semibold hover:text-blue-800 transition"
        >
          View All Services â†’
        </a>
      </div>
    </div>
  </section>

  <!-- Call-to-Action Section -->
  <section class="py-12 sm:py-16 md:py-20 bg-blue-600 text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-3 sm:mb-4 md:mb-6 max-w-4xl mx-auto">
        Ready to Transform Your IT Infrastructure?
      </h2>
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl mb-6 sm:mb-8 max-w-3xl mx-auto">
        Let's discuss how we can help your business grow with reliable managed IT services.
      </p>
      <a 
        href={`${base}/contact/`}
        class="inline-block bg-white text-blue-600 px-6 py-2.5 sm:px-8 sm:py-3 md:px-10 md:py-4 rounded-lg text-sm sm:text-base md:text-lg font-semibold hover:bg-gray-100 transition shadow-lg"
      >
        Contact Us Today
      </a>
    </div>
  </section>
</Layout>
