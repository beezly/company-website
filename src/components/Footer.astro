---
import { siteConfig } from '../config';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-300 mt-auto">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      <!-- Company Info -->
      <div class="sm:col-span-2 lg:col-span-1">
        <h3 class="text-white font-bold text-base md:text-lg mb-3 md:mb-4">{siteConfig.companyName}</h3>
        <p class="text-sm md:text-base">{siteConfig.tagline}</p>
      </div>

      <!-- Contact Information -->
      <div>
        <h3 class="text-white font-bold text-base md:text-lg mb-3 md:mb-4">Contact Us</h3>
        <ul class="space-y-2 text-sm md:text-base">
          <li>
            <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-white transition-colors">
              {siteConfig.contact.email}
            </a>
          </li>
          <li>
            <a href={`tel:${siteConfig.contact.phone.replace(/\D/g, '')}`} class="hover:text-white transition-colors">
              {siteConfig.contact.phone}
            </a>
          </li>
          <li class="text-gray-400">
            {siteConfig.contact.address}
          </li>
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class="text-white font-bold text-base md:text-lg mb-3 md:mb-4">Follow Us</h3>
        <div class="flex space-x-4 md:space-x-6">
          {siteConfig.social.linkedin && (
            <a 
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-6 h-6 md:w-7 md:h-7" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          )}
          {siteConfig.social.twitter && (
            <a 
              href={siteConfig.social.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white transition-colors"
              aria-label="Twitter"
            >
              <svg class="w-6 h-6 md:w-7 md:h-7" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-800 mt-6 md:mt-8 pt-4 md:pt-6 text-center text-xs sm:text-sm">
      <p>&copy; {currentYear} {siteConfig.companyName}. All rights reserved.</p>
    </div>
  </div>
</footer>
