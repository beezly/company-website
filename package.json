{
  "name": "smb-company-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "format": "prettier --write \"**/*.{js,ts,astro,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,astro,json,css,md}\"",
    "prepare": "husky",
    "security:scan": "gitleaks detect --source . --verbose",
    "security:protect": "gitleaks protect --source . --verbose"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@tailwindcss/vite": "^4.1.17",
    "astro": "^5.16.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@vitest/ui": "^4.0.13",
    "fast-check": "^4.3.0",
    "gitleaks": "^1.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "vitest": "^4.0.13"
  }
}
