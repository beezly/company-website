#!/usr/bin/env sh

echo "ğŸ” Scanning for secrets before commit..."

# Run gitleaks to detect secrets
gitleaks detect --source . --verbose --no-git

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ COMMIT BLOCKED: Potential secrets detected!"
  echo ""
  echo "Gitleaks found potential API keys, tokens, or other secrets in your code."
  echo ""
  echo "What to do:"
  echo "  1. Remove the secret from your code"
  echo "  2. Use environment variables instead"
  echo "  3. Add to .gitignore if it's a config file"
  echo "  4. If this is a false positive, update .gitleaks.toml"
  echo ""
  exit 1
fi

echo "âœ… No secrets detected. Proceeding with commit..."

# Run linting
echo ""
echo "ğŸ” Running linter..."
npm run lint

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ COMMIT BLOCKED: Linting errors detected!"
  echo ""
  echo "Please fix the linting errors or run 'npm run lint:fix' to auto-fix."
  echo ""
  exit 1
fi

echo "âœ… Linting passed."

# Check code formatting
echo ""
echo "ğŸ” Checking code formatting..."
npm run format:check

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ COMMIT BLOCKED: Code formatting issues detected!"
  echo ""
  echo "Please run 'npm run format' to fix formatting issues."
  echo ""
  exit 1
fi

echo "âœ… Formatting check passed."

# Run tests
echo ""
echo "ğŸ§ª Running tests..."
npm test
